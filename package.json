{
	"name": "tanstack-turborepo-boilerplate",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"format": "turbo format",
		"prepare": "husky"
	},
	"devDependencies": {
		"@repo/biome-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.0",
		"turbo": "^2.4.4"
	},
	"packageManager": "bun@1.2.5",
	"engines": {
		"node": ">=20"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"bun run lint",
			"bun run format"
		]
	},
	"dependencies": {
		"@tanstack/react-router": "^1.114.27",
		"@tanstack/react-start": "^1.114.27",
		"vinxi": "^0.5.3"
	}
}
