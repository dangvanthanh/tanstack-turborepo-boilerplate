{
	"name": "tanstack-turborepo-boilerplate",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"format": "turbo format",
		"prepare": "husky"
	},
	"devDependencies": {
		"@repo/biome-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"turbo": "^2.5.5"
	},
	"packageManager": "bun@1.2.18",
	"engines": {
		"node": ">=20"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"bun run lint",
			"bun run format"
		]
	}
}
